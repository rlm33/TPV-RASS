<?xml version="1.0"?>
<!DOCTYPE venta SYSTEM "http://artemisa.dlsi.ua.es/~ccachero/isi/venta.dtd">
<venta>
	<fecha>
		<dia>L|M|X|J|V|S|D</dia>
		<hora>HH:MM</hora>
	</fecha>
	<linventa>
		<codProd>X</codProd>
		<cant>Y</cant>
	</linventa>
	<linventa>
		<codProd>X</codProd>
		<cant>Y</cant>
	</linventa>
	<cliente>
		<tarjetaFid>true</tarjetaFid>
		<empleado>false</empleado>
	</cliente>
</venta>

<!DOCTYPE venta [
<!ELEMENT venta (fecha, linventa, (linventa|deshacerlinventa|cancelarventa)*,cliente)>
<!ELEMENT fecha EMPTY>
<!ELEMENT linventa EMPTY>
<!ELEMENT cliente EMPTY>
<!ELEMENT deshacerlinventa (#PCDATA)>
<!ELEMENT cancelarventa (#PCDATA)>
<!ATTLIST fecha dia (L,M,X,J,V,S,D) #REQUIRED>
<!ATTLIST fecha hora CDATA #REQUIRED>
<!ATTLIST linventa codProd CDATA #REQUIRED>
<!ATTLIST linventa cant CDATA #REQUIRED>
<!ATTLIST cliente tarjetaFid (true|false) #REQUIRED>
<!ATTLIST cliente empleado (true|false) #REQUIRED>
